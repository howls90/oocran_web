<div class="panel-group">
  <div class="panel panel-default">
    <div class="panel-heading">
      <h4 class="panel-title">
        <a data-toggle="collapse" href="#<%= train.id %>"><%= train.name %></a>
      </h4>
    </div>
    <div id="<%= train.id %>" class="panel-collapse collapse">
      <div class="panel-body">
        <p style="float:left;width: 70%"><%= train.description %></p>
        <iframe style="float: right" width="320" height="245" src="<%= train.video %>"></iframe>
        <a style="text-decoration: none;color: black" href="<%= train.wiki %>">Documentation</a>
        <br><br>
        <% if user_signed_in? %>
            <th>
              <%= link_to "Delete", train,class: "btn btn-danger", method: :delete %>
              <%= link_to "Update", edit_train_path(train), class: "btn btn-warning"  %>
            </th>
        <%end%>
      </div>
    </div>
  </div>
</div>